@model IEnumerable<eHotels.Models.Hotels>

@if (!Model.Any())
{
    <p>No hotels found.</p>
}
else
{
    <div class="container-fluid pb-5">
        <div class="row g-4 d-flex flex-nowrap pb-2" style="overflow-x: scroll;">
            @foreach (var item in Model)
            {
                <div class="d-inline-block" style="width: 300px;">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="...">
                    <div class="card-body" style="height: 200px;">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Street)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.Province) , @Html.DisplayFor(modelItem => item.PostalCode)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.RoomsCount) rooms</p>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-secondary me-2" asp-action="Details" asp-route-id="@item.Hotel_ID">Details</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Hotel_ID">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Hotel_ID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger ms-2">Delete</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

}

