@model eHotels.Models.Hotels

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <h4>Hotels</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Hotel_chainName_ID)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Hotel_chainName_ID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Street)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Street)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.City)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.City)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Province)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Province)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PostalCode)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PostalCode)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Rooms)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rooms)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model?.Hotel_ID" class="btn btn-primary">Edit</a>
                    <div class="row mb-3">
                        <div class="col-12">
                            <a href="@Url.Action("Index", "HotelChain")" class="btn btn-primary">Hotel Chains</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
