@model eHotels.Models.HotelChains

@{
    ViewData["Title"] = "Details";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

<div class="container py-4">
    <h1 class="text-center mb-4">Hotel Chain Details</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Address</h4>
            <hr />

            <div class="row">
                <div class="col-sm-2">
                    <dt>Street:</dt>
                </div>
                <div class="col-sm-10">
                    <dd>@Html.DisplayFor(model => model.Street)</dd>
                </div>

                <div class="col-sm-2">
                    <dt>City:</dt>
                </div>
                <div class="col-sm-10">
                    <dd>@Html.DisplayFor(model => model.City)</dd>
                </div>

                <div class="col-sm-2">
                    <dt>Province:</dt>
                </div>
                <div class="col-sm-10">
                    <dd>@Html.DisplayFor(model => model.Province)</dd>
                </div>

                <div class="col-sm-2">
                    <dt>Postal Code:</dt>
                </div>
                <div class="col-sm-10">
                    <dd>@Html.DisplayFor(model => model.PostalCode)</dd>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Hotel Chain Information</h4>
            <hr />

            <dl class="row">
                <div class="col-sm-2">
                    <dt>Hotels:</dt>
                </div>
                <div class="col-sm-10">
                    <dd>@Html.DisplayFor(model => model.Hotels)</dd>
                </div>

                <div class="col-sm-2">
                    <dt>Rating:</dt>
                </div>
                <div class="col-sm-10">
                    <dd class="col-sm-10">
                        @for (int i = 0; i < Model.Rating; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </dd>
                </div>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Name" class="btn btn-primary mr-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
